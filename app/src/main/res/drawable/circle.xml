<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Layer List allows us to stack multiple drawables onto og each other (grey circle and number) order matters, last item shows at top
    Idea taken from Coding in FLow video on Youtube titled - "Circular Determinate ProgressBar with Background and Text - Android Studio Tutorial"
    https://www.youtube.com/watch?v=YsHHXg1vbcc-->
    <item>
        <shape
            android:shape="ring"
            android:thicknessRatio="16"
            android:useLevel="false">
            <solid android:color="@color/XlightGreen" />
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thicknessRatio="14"
                android:useLevel="true">
                <solid android:color="@color/lightGreen" />
            </shape>
        </rotate>
    </item>
</layer-list>